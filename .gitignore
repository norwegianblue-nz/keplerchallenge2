# Ignore directories generated by Composer
/drush/contrib/
/drush/sites/*
/vendor/*
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/
/web/autoload.php

# Ignore Drupal's file directory
/web/sites/*/files/

# Ignore SimpleTest multi-site environment.
/web/sites/simpletest

# Ignore files generated by PhpStorm
/.idea/

/web/sites/*/settings.local.php
/web/sites/*/services.yml
/web/sites/*/development.services.yml
/web/sites/*/php_errors.log


/web/sites/*/themes/custom/*/css/
web/sites/keplerchallenge.co.nz/themes/custom/keplerst/style/css/
web/sites/keplerchallenge.co.nz/themes/custom/keplerst/style/css_safe.tar.bz2
/web/sites/*/themes/custom/*/css_safe.tar.bz2
/web/sites/*/themes/custom/*/.sass-cache/
/web/sites/*/*~
/web/sites/*/themes/custom/*/sass_this

# Ignore test modules
/web/sites/*/modules/contrib
/web/sites/*/modules/custom/*_try*
web/sites/keplerchallenge.co.nz/unused_modules

# Specifically include the simplesaml config and metadata
# NOTE - you have to include each directory on the path to the include file and exclude all files in directories. Then include the next dir etc etc.
!vendor/simplesamlphp
vendor/simplesamlphp/*
!vendor/simplesamlphp/simplesamlphp
vendor/simplesamlphp/simplesamlphp/*
!vendor/simplesamlphp/simplesamlphp/config
# config.php ignored as has db authentication data. There's a copy in /private
vendor/simplesamlphp/simplesamlphp/config/config.php
!vendor/simplesamlphp/simplesamlphp/metadata
